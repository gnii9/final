FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV DEBIAN_FRONTEND=noninteractive

WORKDIR /app

# Install minimal system deps
RUN apt-get update && apt-get install -y --no-install-recommends \
    default-libmysqlclient-dev libglib2.0-0 libsm6 libxext6 netcat-openbsd \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Copy minimal requirements and install
COPY requirements_test.txt /app/requirements_test.txt
RUN pip install --upgrade pip setuptools wheel \
    && pip install --no-cache-dir -r /app/requirements_test.txt

# Copy only application code (no models/dataset)
COPY . /app

EXPOSE 8000 8001

CMD ["/entrypoint.sh"]
